---
import Layout from '../layouts/Layout.astro';
---

<Layout title="MapKloud - Welcome">
	<main class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
		<div class="container mx-auto px-4 py-16">
			<div class="text-center">
				<h1 class="text-6xl font-bold text-white mb-6">
					Welcome to <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">MapKloud</span>
				</h1>
				<p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
					Your trusted partner for innovative cloud solutions and digital transformation.
				</p>
				<div class="flex justify-center space-x-4">
					<button class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200">
						Get Started
					</button>
					<button class="border border-gray-600 hover:border-gray-500 text-gray-300 hover:text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200">
						Learn More
					</button>
				</div>
			</div>
			
			<div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
				<div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
					<div class="text-blue-400 text-3xl mb-4">🚀</div>
					<h3 class="text-xl font-semibold text-white mb-2">Fast & Reliable</h3>
					<p class="text-gray-300">Lightning-fast performance with 99.9% uptime guarantee.</p>
				</div>
				<div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
					<div class="text-purple-400 text-3xl mb-4">🛡️</div>
					<h3 class="text-xl font-semibold text-white mb-2">Secure by Design</h3>
					<p class="text-gray-300">Enterprise-grade security with end-to-end encryption.</p>
				</div>
				<div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20">
					<div class="text-green-400 text-3xl mb-4">💡</div>
					<h3 class="text-xl font-semibold text-white mb-2">Innovation First</h3>
					<p class="text-gray-300">Cutting-edge solutions that drive your business forward.</p>
				</div>
			</div>
		</div>
	</main>
</Layout>
